{
  "info": {
    "name": "URL Shortener - Auth Flow",
    "description": "Complete authentication flow for URL Shortener API including anonymous usage, registration, payment, and authenticated operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "url-shortener-auth"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "subscription_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "plan_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Anonymous User Flow",
      "item": [
        {
          "name": "Create First URL (Anonymous)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has short code\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('shortCode');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/shorten",
              "host": ["{{base_url}}"],
              "path": ["api", "shorten"]
            },
            "description": "First URL - should succeed with warning about 1 URL remaining"
          }
        },
        {
          "name": "Create Second URL (Anonymous)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Message warns about registration\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.message).to.include('register');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://google.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/shorten",
              "host": ["{{base_url}}"],
              "path": ["api", "shorten"]
            },
            "description": "Second URL - last free URL, should warn about registration"
          }
        },
        {
          "name": "Create Third URL (Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 403\", function () {",
                  "    pm.response.to.have.status(403);",
                  "});",
                  "",
                  "pm.test(\"Error requires registration\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.error).to.include('Registration required');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://github.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/shorten",
              "host": ["{{base_url}}"],
              "path": ["api", "shorten"]
            },
            "description": "Third URL - should fail with 403 requiring registration"
          }
        }
      ],
      "description": "Anonymous users can create up to 2 URLs before registration is required"
    },
    {
      "name": "2. Get Available Plans",
      "item": [
        {
          "name": "Get All Plans",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Plans array is returned\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.be.an('array');",
                  "});",
                  "",
                  "// Save first plan ID for registration",
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.length > 0) {",
                  "    var litePlan = jsonData.data.find(p => p.name === 'lite');",
                  "    if (litePlan) {",
                  "        pm.collectionVariables.set('plan_id', litePlan.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/plans",
              "host": ["{{base_url}}"],
              "path": ["api", "plans"]
            },
            "description": "Retrieve all available subscription plans"
          }
        }
      ],
      "description": "View available subscription plans before registration"
    },
    {
      "name": "3. Normal Registration",
      "item": [
        {
          "name": "Register Individual User (Lite Plan)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "",
                  "pm.test(\"User created successfully\", function () {",
                  "    pm.expect(jsonData.data.user).to.have.property('id');",
                  "    pm.expect(jsonData.data.user).to.have.property('email');",
                  "});",
                  "",
                  "pm.test(\"Subscription pending payment\", function () {",
                  "    pm.expect(jsonData.data.subscription.status).to.eql('pending_payment');",
                  "});",
                  "",
                  "// Save token and IDs",
                  "pm.collectionVariables.set('auth_token', jsonData.data.token);",
                  "pm.collectionVariables.set('user_id', jsonData.data.user.id);",
                  "pm.collectionVariables.set('subscription_id', jsonData.data.subscription.id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"normal\",\n  \"email\": \"user@example.com\",\n  \"password\": \"securepass123\",\n  \"planId\": \"{{plan_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a normal individual user with email and password"
          }
        },
        {
          "name": "Register Individual User (Pro Plan)",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"normal\",\n  \"email\": \"prouser@example.com\",\n  \"password\": \"securepass123\",\n  \"planId\": \"<pro-plan-id>\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register with Pro plan (replace <pro-plan-id> with actual ID)"
          }
        }
      ],
      "description": "Normal user registration for individuals"
    },
    {
      "name": "4. Enterprise Registration",
      "item": [
        {
          "name": "Register Enterprise User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "",
                  "pm.test(\"Enterprise user created\", function () {",
                  "    pm.expect(jsonData.data.user).to.have.property('organizationName');",
                  "    pm.expect(jsonData.data.user.type).to.eql('enterprise');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"enterprise\",\n  \"organizationName\": \"TechCorp Inc\",\n  \"website\": \"https://techcorp.com\",\n  \"password\": \"securepass123\",\n  \"planId\": \"<enterprise-plan-id>\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register an enterprise user with organization details"
          }
        }
      ],
      "description": "Enterprise user registration for organizations"
    },
    {
      "name": "5. Payment Confirmation",
      "item": [
        {
          "name": "Confirm Payment",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Subscription activated\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.subscription.status).to.eql('active');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subscriptionId\": \"{{subscription_id}}\",\n  \"paymentId\": \"pi_stripe_123456789\",\n  \"paymentStatus\": \"succeeded\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/payments/confirm",
              "host": ["{{base_url}}"],
              "path": ["api", "payments", "confirm"]
            },
            "description": "Confirm payment and activate the user's subscription"
          }
        }
      ],
      "description": "Payment confirmation endpoint to activate account"
    },
    {
      "name": "6. Login",
      "item": [
        {
          "name": "Login Individual User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "",
                  "pm.test(\"Token received\", function () {",
                  "    pm.expect(jsonData.data).to.have.property('token');",
                  "});",
                  "",
                  "// Save token for authenticated requests",
                  "pm.collectionVariables.set('auth_token', jsonData.data.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securepass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login with email and password for individual users"
          }
        },
        {
          "name": "Login Enterprise User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.test(\"Enterprise user logged in\", function () {",
                  "    pm.expect(jsonData.data.user.type).to.eql('enterprise');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"organizationName\": \"TechCorp Inc\",\n  \"password\": \"securepass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login with organization name and password for enterprise users"
          }
        }
      ],
      "description": "Login endpoints for both user types"
    },
    {
      "name": "7. User Profile & Quota",
      "item": [
        {
          "name": "Get User Profile",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"User and subscription data returned\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('user');",
                  "    pm.expect(jsonData.data).to.have.property('subscription');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            },
            "description": "Get current user profile and subscription details"
          }
        },
        {
          "name": "Get User Quota",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Quota information returned\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('plan');",
                  "    pm.expect(jsonData.data).to.have.property('usage');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/user/quota",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "quota"]
            },
            "description": "Get user's quota information (URLs used and remaining)"
          }
        }
      ],
      "description": "Get user profile and quota information"
    },
    {
      "name": "8. Authenticated Operations",
      "item": [
        {
          "name": "Create URL (Authenticated)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Quota information included\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('quota');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"url\": \"https://github.com\",\n  \"alias\": \"my-github\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/shorten",
              "host": ["{{base_url}}"],
              "path": ["api", "shorten"]
            },
            "description": "Create a shortened URL with authentication"
          }
        },
        {
          "name": "Get URL Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/stats/my-github",
              "host": ["{{base_url}}"],
              "path": ["api", "stats", "my-github"]
            },
            "description": "Get statistics for a specific short URL"
          }
        }
      ],
      "description": "Operations available to authenticated users"
    },
